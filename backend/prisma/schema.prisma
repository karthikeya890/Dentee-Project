// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String
  status    String   @default("INACTIVE") // Options :["ACTIVE", "INACTIVE" , "PENDING", "BANNED"]
  createdAt DateTime
  updatedAt DateTime @default(now())
  clinics   Clinic[]
  events    Event[]
}

model Clinic {
  id            Int      @id @default(autoincrement())
  name          String
  validTill     DateTime
  country       String
  state         String
  city          String
  zipCode       String
  timeZone      String
  address       String
  defaultClinic Boolean  @default(false)
  user          User?    @relation(fields: [userId], references: [id])
  userId        Int?
  createdAt     DateTime
  updatedAt     DateTime @default(now())
}

model Event {
  id     String  @id
  title  String
  start  String
  end    String
  allDay Boolean
  User   User?   @relation(fields: [userId], references: [id])
  userId Int?
}
